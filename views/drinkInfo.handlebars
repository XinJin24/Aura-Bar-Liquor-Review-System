<main>
    {{!-- post and delete --}}
    <h1>{{title}}</h1>
    {{#if login}}
        {{#if user}}
                <form id="drinkid_form" action="/{{drinkInfo._id}}" method="POST">
                    <div>
                        <label for="name">
                            Name:
                            <input type="text" id="name" name="name" value="{{name}}" required>
                        </label>
                    </div>
                    <div>
                        <label for="category">
                            Category:
                            <input type="text" id="category" name="category" value="{{category}}" required>
                        </label>
                    </div>
                    <div>
                        <label for="recipe">
                            Recipe:
                             <input type="text" id="recipe" name="recipe" value="{{recipe}}" required>
                        </label>
                    </div>
                    <div>
                        <label for="rating">
                            Rating:
                            <input type="text" id="rating" name="rating" value="{{rating}}" required>
                        </label>
                    </div>
                    <div>
                        <label for="price">
                            Price:
                            <input type="text" id="price" name="price" value="{{price}}" required>
                        </label>
                    </div>
                    <div>
                        <label for="drinkPictureLocation">
                            Upload Image:
                            <input type="file" id="drinkPictureLocation" name="drinkPictureLocation" required>
                            <img id="previewImg" src="#">
                        </label>
                    </div>
                    <div>
                        <ul class="errorInfo">
                            {{#if error}}
                                <li>{{error}}</li>
                            {{/if}}
                        </ul>
                    </div>
                    <button type="submit" id="submit">Submit</button>
                </form>
                <form id="delete_form" action="/{{drinkInfo._id}}" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" id="delete">Delete</button>
                </form>
            {{/if}}

            {{!-- get method --}}
            <h2>Drink Details</h2>
            <p>Name: {{drinkInfo.name}}</p>
            <p>Category: {{drinkInfo.category}}</p>
            <p>Recipe: {{drinkInfo.recipe}}</p>
            <p>Price: {{drinkInfo.price}}</p>
            <img src="{{drinkInfo.drinkPictureLocation}}" alt="Drink Image">

            <h2>Reviews</h2>
            <ul>
                {{#each reviews}}
                    <li>{{this.reviewText}}</li>
                {{/each}}
            </ul>
        {{else}}
            <p>Please log in to view details about this drink.</p>
            <p id="clienterror5"></p>
        {{/if}}

        <p>Please log in to view details about this drink.</p>
        <p id="clienterror5"></p>
    {{/if}}   error

